{% extends 'base.html.twig' %}

{% block body %}
<div class="contenedorPeliculas">
  <div class="w3-container flotar" style="width:400px">
    <div class="w3-card-4" style="width:50%">
      <img src="{{ pelicula.imagen }}" style="width:100%">
      <div class="w3-container">
        <strong>{{ pelicula.nombre }}</strong>
        <p>Director: {{ pelicula.director }}</p>
        <p>Duraci√≥n: {{ pelicula.duracion }}</p>
      </div>
    </div>
  </div>
</div>
{% if is_granted("ROLE_ADMIN") %}
  <a href="{{path('actualizar', { 'id' : pelicula.id })}}" class="w3-button w3-black">Actualizar</a>
  <a href="{{path('eliminar', { 'id' : pelicula.id })}}" class="w3-button w3-black">Eliminar</a>
{% endif %}

{% endblock %}
